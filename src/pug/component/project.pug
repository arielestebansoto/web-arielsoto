-var imageSrc = './img/project/'
-var formatJpg = '.jpg'
mixin card-project(title,image)
    a(href="index.html").card-project 
        .card-project__image
            img(src=`${imageSrc}${image}${formatJpg}`, alt="none")
        .card-project__info
            h1.card-project--title #{title}
        .card-project-hover

section.section-project
    h1.section-main-title Projects
    .project-container
        +card-project('Mercado Libre Home', 'mercadolibre')

